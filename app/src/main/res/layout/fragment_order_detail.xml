<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.OrderDetailFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tbOderDetailFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/baseline_keyboard_arrow_left_24"
        app:navigationIconTint="@color/white"
        app:title="Order Detail"
        app:titleTextColor="@color/white" />


    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1.30dp"
        android:backgroundTint="#DAD4D4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tbOderDetailFragment" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvOrderStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13.00dp"
        android:elevation="0dp"
        app:cardCornerRadius="7.80dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="6.50dp">

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="39.00dp"
                android:layout_height="39.00dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_circle"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/baseline_backpack_24"
                app:tint="#DDDDDD"/>
            
            <View
                android:id="@+id/view1"
                android:layout_width="52.00dp"
                android:layout_height="5.20dp"
                android:layout_gravity="center_vertical"
                android:background="#6B6464"/>

            <ImageView
                android:id="@+id/iv2"
                android:layout_width="39.00dp"
                android:layout_height="39.00dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_circle"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/baseline_shopping_bag_24"
                app:tint="#DDDDDD"/>

            <View
                android:id="@+id/view2"
                android:layout_width="52.00dp"
                android:layout_height="5.20dp"
                android:layout_gravity="center_vertical"
                android:background="#6B6464"/>

            <ImageView
                android:id="@+id/iv3"
                android:layout_width="39.00dp"
                android:layout_height="39.00dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_circle"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/baseline_local_shipping_24"
                app:tint="#DDDDDD"/>

            <View
                android:id="@+id/view3"
                android:layout_width="52.00dp"
                android:layout_height="5.20dp"
                android:layout_gravity="center_vertical"
                android:background="#6B6464"/>
            <ImageView
                android:id="@+id/iv4"
                android:layout_width="39.00dp"
                android:layout_height="39.00dp"
                android:layout_gravity="center"
                android:background="@drawable/bg_circle"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/baseline_done_outline_24"
                app:tint="#DDDDDD"/>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvOrderDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="0dp"
        app:cardCornerRadius="7.80dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cvOrderStatus">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/backgroundColor"
            android:orientation="vertical">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="13.00dp"
                android:text="ordered Items"
                android:textColor="@color/my_text_color"
                android:textSize="18.20sp"
                android:textStyle="bold"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvProductItems"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="13.00dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>