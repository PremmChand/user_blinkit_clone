<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="130dp"
    android:layout_height="wrap_content"
    android:layout_marginEnd="9dp">

    <!-- Top Product Grid Container -->
    <LinearLayout
        android:id="@+id/llProductImages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_bestseller"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- First Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivProduct1"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="6dp"
                android:background="@drawable/bg_product"
                android:src="@drawable/instant1"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivProduct2"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="6dp"
                android:background="@drawable/bg_product"
                android:src="@drawable/masala1"
                android:visibility="gone" />
        </LinearLayout>

        <!-- Second Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivProduct3"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="6dp"
                android:background="@drawable/bg_product"
                android:src="@drawable/colddrink"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvProductCount"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="6dp"
                android:background="@drawable/bg_product"
                android:gravity="center"
                android:text="+3"
                android:textColor="@color/my_text_color"
                android:textSize="18sp"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <!-- Bottom Text Info -->
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/llProductImages">

        <TextView
            android:id="@+id/tvProductType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Milk, Curd and Paneer"
            android:textColor="@color/my_text_color"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTotalProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:text="6 products"
            android:textColor="#847F7F"
            android:textSize="13sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvSeeAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginTop="6dp"
            android:background="@drawable/bg_see_all_item"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:text="See all"
            android:gravity="center"
            android:textColor="@color/dark_green"
            android:textSize="13sp"
            android:textStyle="bold" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
